<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"        
        Title="MainWindow" Height="768" MinHeight="768" Width="1366" MinWidth="1024" Background="White" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None"
        >
    <!-- Height="1039"   Width="1920"-->
    <Grid>
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="323" MinWidth="260"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Background="#3E3E3E" Margin="0,0,74,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" MinHeight="200"></RowDefinition>
                    <RowDefinition Height="90" MinHeight="60"></RowDefinition>
                    <RowDefinition Height="90" MinHeight="60"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="90"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="190"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Line Grid.Row="1" Width="220" Height="1"></Line>
                </Grid>
                
                <Button Grid.Row="1" Background="Transparent" BorderBrush="#AAAAAA" Width="173" MinWidth="135"
                        Height="42" FontSize="19" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners" Click="Button_Click_1">Menu
                </Button>
                <Button Grid.Row="2" Background="Transparent" BorderBrush="#AAAAAA" Width="173" MinWidth="135"
                        Height="42" FontSize="19" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners">Ordenes
                </Button>
                <Button x:Name="BtnCerrarSesion" Grid.Row="7" Background="Transparent" BorderBrush="#AAAAAA" Width="173" MinWidth="135"
                        Height="42" FontSize="19" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners" Click="Button_Click">Cerrar sesión
                </Button>
            </Grid>
            
            <Grid Grid.ColumnSpan="2" Margin="249,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="77"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Background="#FEBA34">
                    <TextBlock FontFamily="impact" FontSize="49" Foreground="White" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" >CHICKEN HUNTER
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="185" BlurRadius="5 ">
                            </DropShadowEffect>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
                <Frame x:Name="MainFrame" Source="\Pages\Menu.xaml" Background="AliceBlue"
                       Grid.Row="1" Padding="20" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>
        
        
     </Grid>
</Window>
