<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"        
        Title="MainWindow" MaxHeight="1366" MaxWidth="1080" Background="White" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        WindowStyle="None" d:DesignHeight="650" d:DesignWidth="1080" 
        >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="323" MinWidth="160"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Background="#3E3E3E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" MinHeight="200"></RowDefinition>
                    <RowDefinition Height="90" MinHeight="60"></RowDefinition>
                    <RowDefinition Height="90" MinHeight="60"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="90"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="190"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Line Grid.Row="1" Width="220" Height="1"></Line>
                </Grid>
                
                <Button Grid.Row="1" Background="Transparent" BorderBrush="#AAAAAA" Width="250" MinWidth="190"
                        Height="60" FontSize="28" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners">Menu
                </Button>
                <Button Grid.Row="2" Background="Transparent" BorderBrush="#AAAAAA" Width="250" MinWidth="190"
                        Height="60" FontSize="28" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners">Ordenes
                </Button>
                <Button Grid.Row="7" Background="Transparent" BorderBrush="#AAAAAA" Width="250" MinWidth="190"
                        Height="60" FontSize="28" FontFamily="Roboto" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="3"
                        ToolTip="MaterialDesignRaisedButton with Round Corners">Cerrar sesión
                </Button>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="110"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Background="#FEBA34">
                    <TextBlock FontFamily="impact" FontSize="70" Foreground="White" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" >CHICKEN HUNTER
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="3" Direction="185" BlurRadius="5 ">
                            </DropShadowEffect>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
                <Frame x:Name="MainFrame" Source="\Pages\Menu.xaml" Background="AliceBlue"
                       Grid.Row="1" Padding="20" NavigationUIVisibility="Hidden"></Frame>
            </Grid>
        </Grid>
        
        
     </Grid>
</Window>
