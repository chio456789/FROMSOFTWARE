                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBlock Text="Ordenes" TextAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="29" Foreground="White" FontFamily="Roboto"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid Width="auto" HorizontalAlignment="Right" Margin="0,0,50,0">
                            <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
