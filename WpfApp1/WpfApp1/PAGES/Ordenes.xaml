<Page x:Class="WpfApp1.Pages.Ordenes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="620    " d:DesignWidth="1038"
      Title="Ordenes">

    <Grid Background="White">
        <Border BorderBrush="#585858" BorderThickness="1" Opacity=".5"></Border>
        <Grid Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid Background="#585858">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBlock Text="Ordenes" TextAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="29" Foreground="White" FontFamily="Roboto"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid Width="auto" HorizontalAlignment="Right" Margin="0,0,50,0">
                            <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                                <materialDesign:ColorZone Mode="Standard" Padding="8 4 8 4" CornerRadius="2"  materialDesign:ShadowAssist.ShadowDepth="Depth1" Width="300" Height="29">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="Buscar" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" MinWidth="200" />
                                        <Button Style="{DynamicResource MaterialDesignToolButton}" Grid.Column="1" Margin="0,0,0,0" Height="Auto" HorizontalAlignment="Right">
                                            <materialDesign:PackIcon Kind="Magnify" Opacity=".56" />
                                        </Button>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Background="#AAAAAA" Margin="0,10,0,0">
                <ScrollViewer>
                    <WrapPanel>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>
                        <Grid Background="White" Width="214" Height="260" Margin="2">
                        </Grid>

                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>
