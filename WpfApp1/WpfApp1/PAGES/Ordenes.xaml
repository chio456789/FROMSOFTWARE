                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="Buscar" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" MinWidth="200" />
                                        <Button Style="{DynamicResource MaterialDesignToolButton}" Grid.Column="1" Margin="0,0,0,0" Height="Auto" HorizontalAlignment="Right">
                                            <materialDesign:PackIcon Kind="Magnify" Opacity=".56" />
                                        </Button>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <ScrollViewer>
                    <WrapPanel>
                        <StackPanel x:Name="muestra">
                            <StackPanel Margin="20 0">
                                <ItemsControl x:Name="ListaMenu" ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="3" Width="200" Height="250" BorderBrush="#E8330B" BorderThickness="1" CornerRadius="3" Background="White">
                                                <StackPanel>
                                                    <Grid Margin="5">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"></RowDefinition>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Image Source="folco-masi-EkzeCqcx_Zc-unsplash.png" Height="100" Stretch="Fill">

                                                        </Image>


                                                        <Grid Grid.Row="1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="auto"></RowDefinition>
                                                                <RowDefinition ></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="{Binding Nombre}" Foreground="#1D1D1D" Margin="0,5" FontFamily="Roboto" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"></TextBlock>
                                                            <TextBlock Text="{Binding Descripcion}" Grid.Row="1" Margin="10,0" Foreground="#606060"></TextBlock>
                                                        </Grid>

                                                        <Grid Grid.Row="2" Margin="0,0,0,5">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition></ColumnDefinition>
                                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBox x:Name="chio"></TextBox>
                                                            <ComboBox  DisplayMemberPath="Item"  Width="80" Height="30" FontSize="12" materialDesign:HintAssist.Hint="Cantidad" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Padding="0">
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                                <ComboBoxItem>3</ComboBoxItem>
                                                                <ComboBoxItem>4</ComboBoxItem>
                                                                <ComboBoxItem>5</ComboBoxItem>
                                                                <ComboBoxItem>6</ComboBoxItem>
                                                                <ComboBoxItem>7</ComboBoxItem>
                                                                <ComboBoxItem>8</ComboBoxItem>
                                                                <ComboBoxItem>9</ComboBoxItem>
                                                                <ComboBoxItem>10</ComboBoxItem>
                                                            </ComboBox>
                                                            <Button x:Name="BtnProdAgregar" 
                                                                    Grid.Column="1" Background="White" 
                                                                    BorderBrush="#06D51B" FontSize="12" 
                                                                    FontFamily="Roboto" 
                                                                    Foreground="#06D51B" 
                                                                    Style="{StaticResource MaterialDesignRaisedButton}" 
                                                                    Click="BtnProdAgregar1"
                                                            materialDesign:ButtonAssist.CornerRadius="3" 
                                                                    ToolTip="Agregarás la cantidad seleccionada a la factura" 
                                                                    HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"
                                                                    Padding="4" Height="30" 
                                                                    Width="60" Margin="10,0" 
                                                                    CommandParameter="{Binding Path=CodProd}">Agregar
                                                            </Button>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>

                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>

                            <ItemsControl>
                                <DataTemplate x:Name="as">
                                    <ComboBox x:Uid="df">

                                    </ComboBox>
                                </DataTemplate>
                            </ItemsControl>

